# Environment Variables Example
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to git!

# Email Configuration (Gmail)
MAIL_USERNAME=your_gmail@gmail.com
MAIL_PASSWORD=your_gmail_app_password

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# News API Keys
# Get NewsAPI key from: https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# Get Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Get Alpha Vantage key from: https://www.alphavantage.co/support/#api-key
# FREE TIER: 5 API calls per minute, 500 calls per day
ALPHA_VANTAGE_API_KEY=your_alphavantage_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development

# Stripe Payment
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Database (Production - Render PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis (Production - Upstash or Render Redis)
REDIS_URL=redis://default:password@host:port

# Background Tasks (set to 'true' for local development only)
ENABLE_BACKGROUND_THREAD=false

# Polygon.io API
POLYGON_API_KEY=your_polygon_api_key_here

# Finnhub API (for Economic Calendar)
# Get free API key from: https://finnhub.io
FINNHUB_API_KEY=your_finnhub_api_key_here
